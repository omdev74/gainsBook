{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".", // This should point to the root of your project
    "paths": {
      "@/*": ["./src/*"], // Pointing to src folder inside the server directory
      "@shared/*": ["../packages/shared/*"] // Correct path to shared
    }
  },
  "include": ["src"], // Ensure to include the src folder where your code is
  "exclude": ["node_modules"]
}

